#include <stdio.h>

int main() {
    int T;
    scanf("%d", &T);
    
    while (T--) {
        int X, Y, D;
        scanf("%d %d %d", &X, &Y, &D);
        
        if (X < Y) {
            if (Y - X >= D) {
                printf("NO\n");
            } else {
                printf("YES\n");
            }
        } else {
            if (X - Y >= D) {
                printf("NO\n");
            } else {
                printf("YES\n");
            }
        }
    }
    
    return 0;
}
